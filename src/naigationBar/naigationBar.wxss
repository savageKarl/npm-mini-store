view {
  box-sizing: border-box;
  overflow: hidden;
}
.custom-bar {
  z-index: 999;
  background: white;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}
.custom-bar__wrapper {
  padding: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-group {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border: 1px solid #666;
  border-radius: 60rpx;
  padding: 0 10rpx;
}
.search-group > input {
  font-size: 25rpx;
  flex: 1;
}
.search-group > image {
  height: 32rpx;
  width: 32rpx;
  margin-right: 20rpx
}
